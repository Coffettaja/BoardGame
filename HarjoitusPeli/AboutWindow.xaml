<Window x:Class="HarjoitusPeli.AboutWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="About" Height="175" Width="300" ResizeMode="NoResize">
    
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition></ColumnDefinition>
            <ColumnDefinition></ColumnDefinition>
        </Grid.ColumnDefinitions>
        <StackPanel Grid.Column="0" Orientation="Vertical">
            <Label>Ohjelma:</Label>
            <Label>Tekijä:</Label>
            <Label>Päiväys</Label>
            <Label>Versio</Label>
        </StackPanel>
        <StackPanel Grid.Column="1" Orientation="Vertical">
            <Label>Breakthrough -lautapeli</Label>
            <Label>Joonas Karttunen</Label>
            <Label>12.12.2014</Label>
            <Label>1.0.0</Label>
            <Button HorizontalAlignment="Right" Width="60" Height="25" Margin="0,0,10,5" Click="Button_Click">OK</Button>
        </StackPanel>
    </Grid>
</Window>
